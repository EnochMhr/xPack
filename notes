                        <!-- Hidden QR code container for printing -->
                        <div id="hidden-qrcode" style="display:none;"></div>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
                        <script>
                        function printRegistrarPassword(password) {
                            var qrDiv = document.getElementById('hidden-qrcode');
                            qrDiv.innerHTML = "";
                            new QRCode(qrDiv, password);
                            setTimeout(function() {
                                var img = qrDiv.querySelector('img');
                                if (img) {
                                    var printWindow = window.open('', '', 'height=400,width=400');
                                    printWindow.document.write('<html><head><title>Print QR</title></head><body>');
                                    printWindow.document.write(img.outerHTML);
                                    printWindow.document.write('</body></html>');
                                    printWindow.document.close();
                                    printWindow.focus();
                                    printWindow.print();
                                    printWindow.close();
                                }
                            }, 500);
                        }
                        </script>
